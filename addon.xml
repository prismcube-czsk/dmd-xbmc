<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.dmd-czech.voyo"
       name="Voyo TV Archiv"
       version="0.1"
       provider-name="Jiri Vyhnalek">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
    <import addon="script.module.dmd-czech.common" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary>Nova TV video-archive plugin</summary>
    <summary lang="cs">Nova TV - archiv</summary>
    <description>
        Plugin to play TV video archive Voyo.cz
    </description>
    <description lang="cs">
        Plugin pro přehrávání videí z archivu Voyo.cz
    </description>
  </extension>
</addon>
<addon  id="script.module.dmd-czech.common" 
        name="dmd-czech common python modules" 
        provider-name="Jiri Vyhnalek" 
        version="1.0">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension library="lib" point="xbmc.python.module"/>
    <extension point="xbmc.addon.metadata">
    <summary>dmd-czech plugins common python modules</summary>
    <description>
      Common python modules pack that is used by dmd-czech plugins
    </description>
    <license>GNU GPL</license>
    <platform>all</platform>
  </extension>
</addon>
</addons>